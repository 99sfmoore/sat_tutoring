  <table class="table">
  <thead>
    <th>Name</th>
    <% if show_tutor %>
    <th>Tutor</th>
    <% end %>
    <th>Email</th>
    <th>High School<th>

  </thead>
  <% student_list.each do |s| %>
  <tr>
    <td><%=image_tag s.avatar.url(:thumb)%> <%=link_to s.full_name, student_path(s) %></td>
    <% if show_tutor %>
      <td><%= link_to s.tutor.first_name, tutor_path(s.tutor) %></td>
    <% end %>
    <td><%=s.email%></td>
    <td><%=s.high_school %></td>
    <% unless show_tutor %>
      <td><%= form_tag check_homework_student_path(s), method: "get" do %>
        <%= select_tag(:hw, options_from_collection_for_select(Section.all,"id","name"), :prompt => "Select Assignment") %>
        <%= submit_tag "Check Homework", class: "btn btn-primary" %>
        <% end %>
      </td>
    <% end%>
    <td><%=link_to "edit", edit_student_path(s), class: "subtle" %></td>
  </tr>
  <% end %>
</table>
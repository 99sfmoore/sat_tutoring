<table class="table table-bordered table-striped table-condensed table-score">
  <thead>
    <tr>
      <th></th>
        <% tests.each do |t| %>
          <th colspan="3" class="center"><%=t.short_name%></th>
        <% end %>
        <th colspan="3" class="center">Change</th>
      </div>
    </tr>
    <tr>
    <th>Name</th>
    <% tests.each do |t| %>
      <th>M</th>
      <th>R</th>
      <th>W</th>
    <% end %>
      <th>M</th>
      <th>R</th>
      <th>W</th>
  </tr>
  </thead>
  <tr>
    <td><strong>Average</strong></td>
    <% last_test = tests.first %>
    <% tests.each do |t| %>
      <% if RawScore.count(:conditions => {test: t, student_id: student_list}) > 1%>
        <% last_test = t %>
        <td><strong><%= RawScore.average(:math, :conditions => {test_id: t.id, student_id: student_list}).round%></strong></td>
        <td><strong><%= RawScore.average(:reading, :conditions => {test_id: t.id, student_id: student_list}).round%></strong></td>
        <td><strong><%= RawScore.average(:writing, :conditions => {test_id: t.id, student_id: student_list}).round%></strong></td>
      <% else %>
        <% 3.times do %>
          <td></td>
        <% end %>
      <% end %>
    <% end %>
    <td><strong><%= RawScore.average(:math, :conditions => {test: last_test, student_id: student_list}).round - RawScore.average(:math, :conditions => {test: tests.first, student_id: student_list}).round%></strong></td>
    <td><strong><%= RawScore.average(:reading, :conditions => {test: last_test, student_id: student_list}).round - RawScore.average(:reading, :conditions => {test: tests.first, student_id: student_list}).round%></strong></td>
    <td><strong><%= RawScore.average(:writing, :conditions => {test: last_test, student_id: student_list}).round - RawScore.average(:writing, :conditions => {test: tests.first, student_id: student_list}).round%></strong></td>
  </tr>
  <% student_list.each do |s| %>
  <% last_test = tests.first %>
  <tr>
    <td><%=link_to s.full_name, student_path(s) %></td>
    <% tests.each do |t| %>
      <% if s.took?(t) %>
        <% last_test = t %>
        <td><%=number_with_precision(scores[s][t].math, precision: 2)%></td>
        <td><%=number_with_precision(scores[s][t].reading, precision: 2)%></td>
        <td><%=number_with_precision(scores[s][t].writing, precision: 2)%></td>
      <% else %>
        <td></td><td></td><td></td>
      <% end %>
    <% end %>
    <td><%=number_with_precision(scores[s][last_test].math - scores[s][tests.first].math, precision: 2)%></td>
    <td><%=number_with_precision(scores[s][last_test].reading - scores[s][tests.first].reading, precision: 2)%></td>
    <td><%=number_with_precision(scores[s][last_test].writing - scores[s][tests.first].writing, precision: 2)%></td>
    <% end %>
  </tr>
</table>
<% provide(:title, "#{@site.name} Scores") %>

<table class="table">
  <tr>
    <th></th>
    <th colspan="7">Test #1</th>
    <th colspan="7">Test #2</th>
  </tr>
  <tr>
    <th></th>
    <th colspan="3">Raw</th>
    <th colspan="4">Scaled</th>
    <th colspan="3">Raw</th>
    <th colspan="4">Scaled</th>
  </tr>
  <tr>
    <th></th>
    <th>Math</th>
    <th>Reading</th>
    <th>Writing</th>
    <th>Math</th>
    <th>Reading</th>
    <th>Writing</th>
    <th>Total</th>
    <th>Math</th>
    <th>Reading</th>
    <th>Writing</th>
    <th>Math</th>
    <th>Reading</th>
    <th>Writing</th>
    <th>Total</th>
  </tr>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.full_name %></td>
    <% @tests.each do |test| %>
      <% ["Math","CR","Writing"].each do |seg| %>
        <td><%= student.raw_score(test,seg)[:score] %></td>
      <% end%>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    <% end %>
  </tr>
  <% end %>     
</table>
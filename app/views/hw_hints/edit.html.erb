<h1 class="secondary">Edit hint<br>
  <small>Question #<%= @question.question_num %>, <%= @question.section.name %></small></h1>

<h4>The correct answer is <%= @question.correct_answer %>.</h4>

<%= form_for @hint, method: :put do |f| %>
  
  <div class="form-group">
    <%=f.label :answer_choice, "Leave blank for general hint, or choose hint-specific wrong answer choice" %>
    <%=f.text_field :answer_choice, value: @hint.answer_choice, class: "form-control" %>
  </div>

  <div class="form-group">
    <%=f.label :hint, "Hint" %>
    <%=f.text_area :hint, rows: "10", value: @hint.hint, class: "form-control" %> 
  </div>

  <%= f.submit "Edit Hint", class: "btn btn-primary" %>
<% end %>
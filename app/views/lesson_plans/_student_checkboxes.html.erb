
<%= label_tag "All" %>
<%=check_box_tag "selectAll#{hw.id}", "all", true, class: "checkbox-inline"  %>

<% students.each do |s| %>
    <%= label_tag "#{hw.id}[#{s.id}]", s.first_name %>
    <%= check_box_tag "#{hw.id}[#{s.id}]", s.id, true, class: "checkbox-inline" %>
<% end %>

<script>
$('#selectAll<%=hw.id%>').click(function() {
   if (this.checked) {
       $('input[id^="<%=hw.id%>"').each(function() {
           this.checked = true;                        
       });
   } else {
      $('input[id^="<%=hw.id%>"').each(function() {
           this.checked = false;                     
       });
   } 
});


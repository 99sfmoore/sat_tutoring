
<%= label_tag "All" %>
<%=check_box_tag "selectAll#{hw}", "all", true, class: "checkbox-inline"  %>

<% students.each do |s| %>
    <%= label_tag "#{hw}[#{s.id}]", s.first_name %>
    <%= check_box_tag "#{hw}[#{s.id}]", s.id, true, class: "checkbox-inline" %>
<% end %>

<script>
$('#selectAll<%=hw%>').click(function() {
   if (this.checked) {
       $('input[id^="<%=hw%>"').each(function() {
           this.checked = true;                        
       });
   } else {
      $('input[id^="<%=hw%>"').each(function() {
           this.checked = false;                     
       });
   } 
});


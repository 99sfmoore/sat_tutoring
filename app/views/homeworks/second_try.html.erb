<h1 class="secondary">Second Try for <%= @student.full_name %><br>
<small><%=@hw.name%></small></h1>

<div class="col-sm-8 offset-col-sm-2">
  <%= form_tag second_checked_homework_student_homework_path(@student, @hw) do %>
  <% @hw.sections.each do |section| %>
  <h4><%=section.name%></h4>  
  <table class = "table">
    <tr>
      <th>Question #</th>
      <th>Correct Answer</th>
      <th>Student Answer</th>
      <th>Second Answer</th>
    </tr>
    <% section.questions.each do |q| %>
      <% unless q.correct?(@student) %>
        <tr>
          <td class="center"><%=q.question_num%></td>
          <td class="center"><%=q.correct_answer%></td>
          <td class="center"><%=q.student_answer(@student) %></td>
          <td><%= text_field_tag q.id, q.second_try(@student) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
  <% end %>

  <%= submit_tag "Save Answers", class: "btn btn-primary" %>
  <% end %>
</div>


